{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 400,
    "width": 600,
    "data": {
      "url": "https://raw.githubusercontent.com/Bshi0022/FIT3179/refs/heads/main/FIT3179%20-%20A2/Cancer%20death%20by%20types%20.csv",
      "format": {"type": "csv"}
    },
    "params": [
      {
        "name": "CancerType_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Tracheal, bronchus, and lung",
            "Colon and rectum",
            "Stomach",
            "Breast",
            "Esophageal",
            "Pancreatic",
            "Liver",
            "Prostate",
            "Leukemia",
            "Cervical",
            "Non-Hodgkin lymphoma",
            "Brain and central nervous system cancer",
            "Bladder",
            "Lip and oral cavity",
            "Ovarian",
            "Gallbladder and biliary tract",
            "Kidney",
            "Larynx",
            "Multiple myeloma",
            "Other pharynx",
            "Uterine",
            "Nasopharynx",
            "Malignant skin melanoma",
            "Non-melanoma skin cancer",
            "Other cancers",
            "Thyroid",
            "Mesothelioma",
            "Hodgkin lymphoma",
            "Testicular"
          ],
          "labels": [
            "Show All",
            "Tracheal, bronchus, and lung",
            "Colon and rectum",
            "Stomach",
            "Breast",
            "Esophageal",
            "Pancreatic",
            "Liver",
            "Prostate",
            "Leukemia",
            "Cervical",
            "Non-Hodgkin lymphoma",
            "Brain and central nervous system cancer",
            "Bladder",
            "Lip and oral cavity",
            "Ovarian",
            "Gallbladder and biliary tract",
            "Kidney",
            "Larynx",
            "Multiple myeloma",
            "Other pharynx",
            "Uterine",
            "Nasopharynx",
            "Malignant skin melanoma",
            "Non-melanoma skin cancer",
            "Other cancers",
            "Thyroid",
            "Mesothelioma",
            "Hodgkin lymphoma",
            "Testicular"
          ],
          "name": "Cancer Type Selection: "
        }
      }
    ],
    "transform": [
      {
        "filter": "CancerType_selection == null || datum['Cancer Type'] == CancerType_selection"
      }
    ],
    "encoding": {
      "y": {
        "field": "Cancer Type",
        "type": "nominal",
        "title": "Type Of Cancer",
        "axis": {
          "labelFont": "Verdana",
          "labelFontSize": 12,
          "titleFontSize": 14,
          "titleFont": "Verdana"
        }
      },
      "x": {
        "field": "Death Cases per 100,000",
        "type": "quantitative",
        "scale": {
          "domain": [0, 2020]
        },
        "title": "Number of Deaths",
        "axis": {
          "labelFont": "Verdana",
          "labelFontSize": 12,
          "titleFontSize": 14,
          "titleFont": "Verdana"
        }
      },
      "color": {
        "value": "#ee1818"
      },
      "tooltip": [
        {
          "field": "Cancer Type",
          "type": "nominal",
          "title": "Type Of Cancer"
        },
        {
          "field": "Death Cases per 100,000",
          "type": "quantitative",
          "title": "Number of Deaths"
        }
      ]
    },
    "layer": [
      {
        "mark": {
          "type": "bar",
          "size": 10
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "dx": 4,
          "dy": -2,
          "font": "Verdana",
          "fontSize": 10,
          "fontWeight": "bold",
          "color": "#502c2c"
        },
        "encoding": {
          "text": {
            "field": "Death Cases per 100,000",
            "type": "quantitative",
            "format": ".0f"
          }
        }
      }
    ]
  }
  