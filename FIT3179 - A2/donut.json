{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Survival Rates by Cancer Type",
    "repeat": ["Early stage (Stage 1) Survival Rate", "Late stage (Stage 4) Survival Rate"],
    "columns": 2,
    "spec": {
      "data": {
        "url": "https://raw.githubusercontent.com/Bshi0022/FIT3179/refs/heads/main/FIT3179%20-%20A2/Cancer%20-%20Survival%20Rate.csv", 
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "fold": ["Early stage (Stage 1) Survival Rate", "Late stage (Stage 4) Survival Rate"],
          "as": ["Stage", "Survival Rate"]
        },
        {
                  "calculate": "replace(datum['Survival Rate'], '%', '')",
                  "as": "Survival Rate Numeric"
                },
        {
          "calculate": "parseFloat(datum['Survival Rate Numeric'])",
          "as": "Survival Rate"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "arc",
            "innerRadius": 50
          },
          "encoding": {
            "theta": {
              "field": "Survival Rate",
              "type": "quantitative",
              "title": "Survival Rate (%)"
            },
            "color": {
              "field": "Stage",
              "type": "nominal",
              "scale": {
                "domain": ["Early stage (Stage 1) Survival Rate", "Late stage (Stage 4) Survival Rate"],
                "range": ["#2c3e50", "#e74c3c"]
              }
            },
            "tooltip": [
              {"field": "Stage", "title": "Stage"},
              {"field": "Survival Rate", "title": "Survival Rate (%)"}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "middle",
            "fontSize": 14
          },
          "encoding": {
            "text": {
              "field": "Stage",
              "type": "nominal"
            }
          }
        }
      ]
    },
    "config": {}
  }
  