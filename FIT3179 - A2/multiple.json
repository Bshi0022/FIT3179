{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Cancer Rates and Mortality by Gender",
    "columns": 2,
    "repeat": {
      "layer": [
        "Male Cancer Rate",
        "Male Mortality Rate",
        "Female Cancer Rate",
        "Female Mortality Rate"
      ]
    },
    "spec": {
      "width": 350,
      "height": 250,
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Bshi0022/FIT3179/refs/heads/main/FIT3179%20-%20A2/ne_110m_admin_0_countries.topojson",
            "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
          },
          "mark": {
            "type": "geoshape",
            "fill": "#ddd",
            "stroke": "white",
            "strokeWidth": 1
          },
          "encoding": {
            "tooltip": [{"field": "properties.NAME", "type": "nominal", "title": "Country"}]
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Bshi0022/FIT3179/refs/heads/main/FIT3179%20-%20A2/Cancer%20-%20Cases%20and%20number%20by%20gender.csv"
          },
          "transform": [
            {
              "lookup": "Country",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/Bshi0022/FIT3179/refs/heads/main/FIT3179%20-%20A2/ne_110m_admin_0_countries.topojson",
                  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": {"repeat": "layer"},
              "type": "quantitative",
              "scale": {"scheme": "reds"},
              "legend": {"format": ".2f", "title": {"expr": "repeat_layer"}}
            },
            "tooltip": [
              {"field": "Country", "type": "nominal", "title": "Country"},
              {"field": {"repeat": "layer"}, "type": "quantitative", "title": {"expr": "repeat_layer"}}
            ]
          }
        }
      ],
      "facet": {
        "column": "layer",
        "row": "row"
      }
    },
    "config": {
      "view": {"stroke": null}
    }
  }
  