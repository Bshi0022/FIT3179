{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Cancer Rates and Mortality Rates by Gender",
    "repeat": ["Male cancer rate", "Male mortality rate", "Female cancer rate", "Female mortality rate"],
    "columns": 2,
    "spec": {
      "projection": {
        "type": "equirectangular"
      },
      "width": 350,
      "height": 300,
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Bshi0022/FIT3179/refs/heads/main/FIT3179%20-%20A2/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "mark": {
            "type": "geoshape",
            "fill": "#ddd",
            "stroke": "white",
            "strokeWidth": 1
          },
          "encoding": {
            "tooltip": [
              {"field": "properties.NAME", "type": "nominal", "title": "Country"}
            ]
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Bshi0022/FIT3179/refs/heads/main/FIT3179%20-%20A2/Cancer%20-%20Cases%20and%20number%20by%20gender.csv"
          },
          "transform": [
            {
              "lookup": "Country",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/Bshi0022/FIT3179/refs/heads/main/FIT3179%20-%20A2/ne_110m_admin_0_countries.topojson",
                  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": {"repeat": "repeat"},
              "type": "quantitative",
              "scale": {"scheme": "reds"},
              "legend": {"format": ".2f", "title": "Rate"}
            },
            "tooltip": [
              {"field": "Country", "type": "nominal", "title": "Country"},
              {
                "field": {"repeat": "repeat"},
                "type": "quantitative",
                "title": "Rate"
              }
            ]
          }
        },
        {
          "data": {
            "values": [
              {"title": "Male cancer rate"},
              {"title": "Male mortality rate"},
              {"title": "Female cancer rate"},
              {"title": "Female mortality rate"}
            ]
          },
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "top",
            "dy": -5  
          },
          "encoding": {
            "text": {"field": "title"},
            "x": {"value": 175}, 
            "y": {"value": 10}   
          },
          "transform": [
            {
              "calculate": "datum.title",
              "as": "title"
            }
          ]
        }
      ]
    },
    "config": {}
  }
  